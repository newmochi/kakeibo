<%- model_class = Income -%>
<div class="page-header">
  <h4><%=t '.title', :default => model_class.model_name.human.titleize %></h4>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= t('display_m.income_m.idate_m' ) %>:</strong></dt>
  <dd><%= @income.idate %></dd>
  <dt><strong><%= t('display_m.income_m.ivalue_m' ) %>:</strong></dt>
  <dd><%= @income.ivalue.to_s(:delimited) if @income.ivalue != nil %></dd>
  <dt><strong><%= t('display_m.income_m.iorgvalue_m' ) %>:</strong></dt>
  <dd><%= @income.iorgvalue.to_s(:delimited) if @income.iorgvalue != nil %></dd>
  <dt><strong><%= t('display_m.income_m.iobject_m' ) %>:</strong></dt>
  <dd><%= @income.iobject %></dd>
  <dt><strong><%= t('display_m.income_m.iperson_m' ) %>:</strong></dt>
  <dd><%= $inperson_disp_m[@income.iperson] %></dd>
  <dt><strong><%= t('display_m.income_m.ikindx_m' ) %>:</strong></dt>
  <dd><%= $inkindx_disp_m[@income.ikindx] %></dd>
  <dt><strong><%= t('display_m.income_m.ikindy_m' ) %>:</strong></dt>
  <dd><%= @income.ikindy %></dd>
  <dt><strong><%= t('display_m.income_m.ifrom_m' ) %>:</strong></dt>
  <dd><%= @income.ifrom %></dd>
  <dt><strong><%= t('display_m.income_m.inotice_m' ) %>:</strong></dt>
  <dd><%= @income.inotice %></dd>
  <dt><strong><%= t('display_m.income_m.idiary_m' ) %>:</strong></dt>
  <dd><%= @income.idiary %></dd>
  <dt><strong><%= t('display_m.income_m.idetail_m' ) %>:</strong></dt>
  <dd><%= @income.idetail %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              incomes_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_income_path(@income), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              income_path(@income),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<%= link_to "copyして再利用(新規登録)", [:copy, @income], method: :get, :class => 'btn btn-primary btn-default' %>
