<div class="page-header">
  <h1><%#=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
  <h4>支出集計　　
<% link_to t('.new', :default => t("helpers.links.new")),
            new_expense_path,
            :class => 'btn btn-primary' %></h4>
</div>
<div class="well well-sm">
  <p>項目番号の意味は以下の通りです。</p>
  <% for jj in 0..(@exkindxcount - 1) %>
    <%= $exkindx_disp_m[@exkindxmaster[jj]] %>
  <% end %>
</div>
<div class="table-responsive">
  <table class="table table-striped table-hover table-condensed">
    <thead>
      <tr>
      <th class=text-right>年月</th>
      <% for jj in 0..(@exkindxcount - 1) %>
        <th class=text-right><%= @exkindxmaster[jj] %></th>
      <% end %>
      <th class=text-right>月合計</th>
      </tr>
    </thead>
    <%# #####デバッグ用ブレークポイント####### %>
    <%# binding.pry %>
    <%# #####デバッグ用ブレークポイント####### %>
    <tbody>
      <% for ii in 0..(@total_month - 1) %>
        <tr>
          <td class=text-right>
            <%= @exmonthmaster_year[ii] %>
            /
            <%= @exmonthmaster[ii] %>
          </td>
          <% for jj in 0..(@exkindxcount - 1) %>
            <td class=text-right>
            <%= @exkindxmonthallxx[ii][jj].to_s(:delimited) if @exkindxmonthallxx[ii][jj] !=nil %></td>
          <% end %>
          <td class=text-right>
          <%= @exmonthvalue[ii].to_s(:delimited) if @exmonthvalue[ii] !=nil %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="table-responsive">
  <table class="table table-striped table-hover table-condensed">
    <thead>
      <tr>
      <th class=text-right>年</th>
      <% for jj in 0..(@exkindxcount - 1) %>
        <th class=text-right><%= @exkindxmaster[jj] %></th>
      <% end %>
      <th class=text-right>年合計</th>
      </tr>
    </thead>
    <tbody>
      <% for ii in 0..(@to_year - @from_year) %>
        <tr>
          <td class=text-right><%= (@from_year + ii) %></td>
          <% for jj in 0..(@exkindxcount - 1) %>
            <td class=text-right>
            <%= @exkindx_vper_year[ii][jj].to_s(:delimited)  if @exkindx_vper_year[ii][jj] !=nil %></td>
          <% end %>
          <td class=text-right>
          <%= @exyearvalue[ii].to_s(:delimited) if @exyearvalue[ii] !=nil %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>





